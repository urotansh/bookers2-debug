<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <% if user_signed_in? %>
      <div class="container">
      <div class="row justify-content-center my-3">
        <%= form_with url: searches_path, local: true, method: :get do |f| %>
          <%= f.text_field :keyword %>
          <%= f.select :target, {"User": "User", "Book": "Book"} %>
          <%= f.select :search, {"完全一致": "perfect_match", "前方一致": "forward_match", "後方一致": "backward_match", "部分一致": "partial_match"} %>
          <%= f.submit '検索' %>
        <% end %>
      </div>
      </div>
    <% end %>
      <main>
        <p id="notice"><%= notice %></p>
        <%= yield %>
      </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
